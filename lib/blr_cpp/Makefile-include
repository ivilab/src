
################################################################################
#                             Options

# For programs, special purpose compile options are set in Makefile-2. For
# library modules, they must go in Makefile-include. 
#
# For example, to force no optimization for C compiles, replace CC_FLAGS with
# DONT_OPTIMIZE_CC_FLAGS. 
#     
# To force a C99 compile in an emergency, replace
#     $(CC_FLAGS)
# below with 
#      $(CC_C99_BASE_FLAGS) $(CC_TEST_OR_OPTIMIZE)
# In developing IVI library code for the U.A. vision lab, this capability MUST
# BE USED ONLY FOR TRANSITION. 
#
################################################################################

BLR_CPP_LIB_CC_FLAGS = $(CC_FLAGS)
BLR_CPP_LIB_CC_WARNING_FLAGS = $(CC_IVI_WARNINGS)
BLR_CPP_LIB_CXX_FLAGS = $(CXX_FLAGS)
BLR_CPP_LIB_CXX_WARNING_FLAGS = $(CXX_IVI_WARNINGS)
BLR_CPP_LIB_EXTRA_COMPILE_FLAGS =

################################################################################

BLR_CPP_LIB_PREFIX = blr_cpp
BLR_CPP_LIB_UC_PREFIX = BLR_CPP

BLR_CPP_LIB_SRC_DIR = $(BLR_CPP_DIR)
BLR_CPP_LIB_REAL_SRC_DIR = $(REAL_BLR_CPP_DIR)

BLR_CPP_LIB_ARCHIVE = $(BLR_CPP_DIR)$(OBJ_DIR)libIVIblr_cpp.a
BLR_CPP_LIB_LD = -L$(BLR_CPP_DIR)$(OBJ_DIR) -lIVIblr_cpp 

################################################################################

$(BLR_CPP_DIR)Makefile-library.$(MAKE_FLAVOR) : $(MAKE_PATH)Makefile-library.$(MAKE_FLAVOR)
	sed 's/LIB_COMPONENT/BLR_CPP_LIB/g' < $< > $@

include $(BLR_CPP_DIR)Makefile-library.$(MAKE_FLAVOR)

################################################################################

$(BLR_CPP_DIR)Makefile-library : $(MAKE_PATH)Makefile-library
	sed 's/LIB_COMPONENT/BLR_CPP_LIB/g' < $< > $@

include $(BLR_CPP_DIR)Makefile-library

