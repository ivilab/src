
################################################################################
#                             Options

# For programs, special purpose compile options are set in Makefile-2. For
# library modules, they must go in Makefile-include. 
#
# For example, to force no optimization for C compiles, replace CC_FLAGS with
# DONT_OPTIMIZE_CC_FLAGS. 
#     
# In developing IVI library code for the U.A. vision lab, this kind of hacking
# MUST BE USED ONLY FOR TRANSITION. 
#
################################################################################

ERGO_LIB_CC_FLAGS = $(CC_FLAGS)
ERGO_LIB_CC_WARNING_FLAGS = $(CC_IVI_WARNINGS)
ERGO_LIB_CXX_FLAGS = $(CXX_FLAGS)
ERGO_LIB_CXX_WARNING_FLAGS = $(CXX_IVI_WARNINGS)
ERGO_LIB_EXTRA_COMPILE_FLAGS =

################################################################################

ERGO_LIB_PREFIX = ergo
ERGO_LIB_UC_PREFIX = ERGO

ERGO_LIB_SRC_DIR = $(ERGO_DIR)
ERGO_LIB_REAL_SRC_DIR = $(REAL_ERGO_DIR)

ERGO_LIB_ARCHIVE = $(ERGO_DIR)$(OBJ_DIR)libIVIergo.a
ERGO_LIB_LD = -L$(ERGO_DIR)$(OBJ_DIR) -lIVIergo 

################################################################################

$(ERGO_DIR)Makefile-library.$(MAKE_FLAVOR) : $(MAKE_PATH)Makefile-library.$(MAKE_FLAVOR)
	sed 's/LIB_COMPONENT/ERGO_LIB/g' < $< > $@

include $(ERGO_DIR)Makefile-library.$(MAKE_FLAVOR)

################################################################################

$(ERGO_DIR)Makefile-library : $(MAKE_PATH)Makefile-library
	sed 's/LIB_COMPONENT/ERGO_LIB/g' < $< > $@

include $(ERGO_DIR)Makefile-library

