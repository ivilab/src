
################################################################################
#                             Options

# For programs, speical purpose compile options are set in Makefile-2. For
# library modules, the must go in Makefile-include. 
#
# For example, to force no optimization for C compiles, replace CC_FLAGS with
# DONT_OPTIMIZE_CC_FLAGS. 
#     
# To force a C99 compile in an emergency, replace
#     $(CC_FLAGS)
# below with 
#      $(CC_C99_BASE_FLAGS) $(CC_TEST_OR_OPTIMIZE)
# In developing IVI library code for the U.A. vision lab, this capability MUST
# BE USED ONLY FOR TRANSITION. 
#
################################################################################

M2_CPP_LIB_CC_FLAGS = $(CC_FLAGS)
M2_CPP_LIB_CC_WARNING_FLAGS = $(CC_IVI_WARNINGS)
M2_CPP_LIB_CXX_FLAGS = $(CXX_FLAGS)
M2_CPP_LIB_CXX_WARNING_FLAGS = $(CXX_IVI_WARNINGS)
M2_CPP_LIB_EXTRA_COMPILE_FLAGS =

################################################################################

M2_CPP_LIB_PREFIX = m2_cpp
M2_CPP_LIB_UC_PREFIX = M2_CPP

M2_CPP_LIB_SRC_DIR = $(M2_CPP_DIR)
M2_CPP_LIB_REAL_SRC_DIR = $(REAL_M2_CPP_DIR)

M2_CPP_LIB_ARCHIVE = $(M2_CPP_DIR)$(OBJ_DIR)libIVIm2_cpp.a
M2_CPP_LIB_LD = -L$(M2_CPP_DIR)$(OBJ_DIR) -lIVIm2_cpp 

################################################################################

$(M2_CPP_DIR)Makefile-library.$(MAKE_FLAVOR) : $(MAKE_PATH)Makefile-library.$(MAKE_FLAVOR)
	sed 's/LIB_COMPONENT/M2_CPP_LIB/g' < $< > $@

include $(M2_CPP_DIR)Makefile-library.$(MAKE_FLAVOR)

################################################################################

$(M2_CPP_DIR)Makefile-library : $(MAKE_PATH)Makefile-library
	sed 's/LIB_COMPONENT/M2_CPP_LIB/g' < $< > $@

include $(M2_CPP_DIR)Makefile-library

