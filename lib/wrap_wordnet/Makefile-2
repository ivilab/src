
# Template for Makefile-2 for a library directory. Usually operated on by the
# script kjb_add_makefiles. 
#
# The directory that we are in should have a different name than any IVI library
# sub-dirs. 
#
# Replace 'wrap_wordnet' with the directory name, and WRAP_WORDNET with the upper case
# counterpart.  The string that replaces 'wrap_wordnet' should not be a sub-dir of IVI
# library. 
#
# Then, DELETE this comment block, because it is no longer a template! 
#

all          : all_wrap_wordnet
dir_made     : dir_made_wrap_wordnet
clean        : clean_wrap_wordnet
depend       : depend_wrap_wordnet
doc          : doc_wrap_wordnet
misc_doc     : misc_doc_wrap_wordnet
doxygen      : doxygen_wrap_wordnet
doc_dir_made : doc_dir_made_wrap_wordnet
lint         : lint_wrap_wordnet
proto        : proto_wrap_wordnet
shared       : shared_wrap_wordnet

#
# We include $(MAKE_PATH)Makefile-defs once per compile, so this include belongs
# in Makefefile-2. We Note that we rely on late binding of make variables, as
# the proper definition of symbols in $(MAKE_PATH)Makefile-defs require values in
# Makefile-libs-needed, which is included later. 
#
include $(MAKE_PATH)Makefile-defs

# This is for the case that Makefile-dirs does not exist.
# Other updating is handled indirectly.
#
Makefile-dirs:
	$(MAKE_SCRIPT_PATH)ivi_lock_for_make 120 $@ $(MAKE_SCRIPT_PATH)build_file_list
	$(MAKE_SCRIPT_PATH)ivi_lock_for_make 900 $@ $(MAKE_SCRIPT_PATH)build_include_lines -f

include Makefile-dirs

include Makefile-include


init_clean:
	$(MAKE_SCRIPT_PATH)clean_cache

